<nav class="navbar is-spaced is-dark is-double_height" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item is-large" href="/">
      <%= image_tag "Fitness_Tracker_logo.png", alt: "Image description", class: "is-size-2 p-0" %>
