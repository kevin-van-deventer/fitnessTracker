      <div class="navbar-item">
        <div class="buttons">
            <a class="button is-primary" href="/entries/new">
              New
            </a>
        </div>
      </div>
      <div class="navbar-item">
        <div class="buttons">
          <% if user_signed_in? %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "button is-primary" %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "button is-primary" %>
            <%= link_to "Register", new_user_registration_path, class: "button is-primary" %>
          <% end %>
        </div>
