<div class="columns is-centered">
  <div class="column is-half">
    <div class="box">
      <h2 class="title is-2 has-text-centered">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form has-text-centered" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control has-icons-left">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium" %>
            <span class="icon is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>

    <div class="field">
      <%= f.submit "Send me reset password instructions", class: "button is-primary is-medium is-fullwidth" %>
    </div>
  <% end %>

  <div class="container has-text-centered mt-3">
    <%= link_to "Log in", new_session_path(resource_name), class: "button is-link" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "button is-info" %>
  </div>
</div>
  </div>
</div>