<div class="columns is-centered">
  <div class="column is-half">
    <div class="box">
      <h2 class="title is-2 has-text-centered">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form has-text-centered" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control has-icons-left">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium" %>
            <span class="icon is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control has-icons-left">
            <%= f.password_field :password, autocomplete: "current-password", class: "input is-medium" %>
            <span class="icon is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <label class="checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "ml-2" %>
            </label>
          </div>
        <% end %>

        <div class="field">
          <%= f.submit "Log in", class: "button is-primary is-medium is-fullwidth" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
