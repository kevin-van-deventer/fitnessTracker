<div class="columns is-centered">
  <div class="column is-half">
    <div class="box">
      <h2 class="title has-text-centered">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <label class="label">Email</label>
      <div class="control">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>
    </div>

    <div class="field">
      <label class="label">Password</label>
      <% if @minimum_password_length %>
        <em class="is-size-7">(minimum <%= @minimum_password_length %> characters)</em>
      <% end %>
      <div class="control">
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
      </div>
    </div>

    <div class="field">
      <label class="label">Confirm Password</label>
      <div class="control">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>
    </div>

  <div class="has-text-centered">
    <div class="container has-text-centered mt-3">
    <div class="field">
      <div class="control">
        <%= f.submit "Sign up", class: "button is-primary has-text-centered" %>
      </div>
    </div>
  </div>
  </div>
    
  <% end %>

  <div class="has-text-centered">
    <div class="container has-text-centered mt-3">
    <%= link_to "Log in", new_session_path(resource_name), class: "button is-link" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "button is-info" %>
  </div>
  </div>
</div>
  </div>
</div>